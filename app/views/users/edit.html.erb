<h1>Edit your profile</h1>

<%= form_for @user, html: { role: "form" } do |f| %>

  <div class="form-group">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <%= f.submit 'Update', class: "btn btn-default" %>
<% end %>