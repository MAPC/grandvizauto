<div class="modal fade" id="terms" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body">

        <h3>By submitting an entry to the data challenge, you are agreeing to these terms.</h3>
        <%= render 'shared/contest_rules' %>

        <span>
          <%= link_to 'Email me the contest rules', '/email-contest-rules', class: 'email-me', method: :post, remote: true %>
        </span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close Terms</button>
      </div>
    </div>
  </div>
</div>